{
  "builders": [{
    "type": "qemu",
    "qemu_binary": "qemu-system-ppc64",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-fedora-rawhide-ppc64le-{{build_type}}",
    "vm_name": "packer-fedora-rawhide-ppc64le",
    "disk_image": true,
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_key_interval": "150ms",
    "boot_command": [
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"],
      ["-machine", "pseries"],
      ["-cpu", "power8"],
      ["-cdrom", "http/cloud-init/config.iso"],
      ["-nodefaults"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/fedora/virtualbox.sh",
      "scripts/fedora/vmware.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/fedora/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "_comment": "Note the double-nesting of arrays below to force post-processors to chain together",
  "post-processors": [[{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "fedora-rawhide-ppc64le-{{.Provider}}.box",
    "vagrantfile_template": "../vagrantfile_templates/ppc64le.rb"
  },{
    "type": "vagrant-cloud",
    "box_tag": "greg-hellings/fedora-rawhide-ppc64le",
    "access_token": "{{user `cloud_token`}}",
    "version": "{{ user `version`}}"
  }]],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_url": "Fedora-Cloud-Base-32-20200214.n.1.ppc64le.qcow2",
    "iso_checksum": "1edf7f1f58873062a08febd4259cd6faa0165a4504937c4536ce6543fcab7f9a",
    "iso_checksum_type": "sha256",
    "memory": "1024",
    "ssh_timeout": "60m",
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "version": "rawhide-{{ timestamp }}"
  }
}
