{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "{{user `iso_path`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-centos-{{user `centos_version`}}-{{user `arch`}}-{{build_type}}",
      "vm_name": "packer-centos-{{user `centos_version`}}-{{user `arch`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-{{user `centos_version`}}/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "qemuargs": [
        [
          "-m",
          "{{user `memory`}}"
        ],
        [
          "-smp",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `iso_path`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-centos-{{user `centos_version`}}-{{user `arch`}}-{{build_type}}",
      "vm_name": "packer-centos-{{user `centos_version`}}-{{user `arch`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-{{user `centos_version`}}/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "centos-64",
      "iso_url": "{{user `iso_path`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-centos-{{user `centos_version`}}-{{user `arch`}}-{{build_type}}",
      "vm_name": "packer-centos-{{user `centos_version`}}-{{user `arch`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-{{user `centos_version`}}/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "tools_upload_flavor": "linux",
      "shutdown_command": "sudo systemctl poweroff",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/centos-{{user `centos_version`}}/repo.sh",
        "scripts/centos/virtualbox.sh",
        "scripts/centos/vmware.sh",
        "scripts/centos-{{user `centos_version`}}/init.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/centos/locale.sh",
        "scripts/centos-{{user `centos_version`}}/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": "{{user `compression_level`}}",
        "output": "centos-{{user `centos_version`}}-{{user `arch`}}-{{.Provider}}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "greg-hellings/centos-{{user `centos_version`}}",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `centos_release`}}.{{user `version`}}"
      }
    ]
  ],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "7c04523102a704c303d1f6b0161c1fa7cd1e853f668d88ef755a29f3754d2198",
    "iso_checksum_type": "sha256",
    "iso_path": "{{user `mirror`}}/{{user `centos_version`}}/isos/{{user `arch`}}/CentOS-{{user `centos_version`}}-{{user `arch`}}-NetInstall-{{user `centos_release`}}.iso",
    "memory": "2048",
    "mirror": "http://mirrors.kernel.org/centos",
    "ssh_timeout": "60m",
    "arch": "x86_64",
    "centos_release": "1908",
    "centos_version": "7",
    "version": "0",
    "iso_url": "CentOS-7-x86_64-NetInstall-1908.iso",
    "timestamp": "2020223"
  }
}