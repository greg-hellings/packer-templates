{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-fedora-rawhide-x86_64-{{build_type}}",
      "vm_name": "packer-fedora-rawhide-x86_64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/meta/fedora.ks ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "qemuargs": [
        [
          "-m",
          "{{user `memory`}}"
        ],
        [
          "-smp",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Fedora_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-fedora-rawhide-x86_64-{{build_type}}",
      "vm_name": "packer-fedora-rawhide-x86_64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/meta/fedora.ks ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "fedora-64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "output_directory": "output-fedora-rawhide-x86_64-{{build_type}}",
      "vm_name": "packer-fedora-rawhide-x86_64",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/meta/fedora.ks ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "<enter>"
      ],
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/fedora/virtualbox.sh",
        "scripts/fedora/vmware.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "compression_level": "{{user `compression_level`}}",
      "output": "fedora-rawhide-x86_64-{{.Provider}}.box"
    },
    {
        "type": "vagrant-cloud",
        "box_tag": "greg-hellings/fedora-rawhide",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{ timestamp }}"
  }]],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_url": "Fedora-Everything-netinst-x86_64-Rawhide-20200214.n.1.iso",
    "iso_checksum": "688476f923961ce63e93b185d096885eda3094407779ff05d1e2e8d8e231f67b",
    "iso_checksum_type": "sha256",
    "memory": "2048",
    "ssh_timeout": "180m"
  }
}
